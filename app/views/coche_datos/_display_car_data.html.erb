<div class="table-responsive table_div">
	<table class="table table-hover" id="car_table">
		<thead class="table-light">
			<tr>
				<th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Car</th>
				<th>Model</th>
				<th>MPG</th>
				<th>Cylinders</th>
				<th>Horsepower</th>
				<th>Weight</th>
				<th>Origin</th>
			</tr>
		</thead>

		<tbody>
			 <% @matches.each_with_index do |coche, index| %>
				<tr>
					<td>
						<span class="text-muted"><%= index + 1 %>.&nbsp;</span>
						<%= coche.car %>
					</td>
					<td><%= coche.model %></td>
					<td><%= coche.mpg %></td>
					<td><%= coche.cylinders %></td>
					<td><%= coche.horsepower %></td>
					<td><%= coche.weight %></td>
					<td><%= coche.origin %></td>
				</tr>
			 <% end %>
		</tbody>
	</table>
</div>
